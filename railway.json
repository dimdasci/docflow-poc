{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm install --frozen-lockfile && cd packages/cron && pnpm install && pnpm build",
    "watchPatterns": ["packages/cron/**", "pnpm-lock.yaml"]
  },
  "deploy": {
    "startCommand": "cd packages/cron && pnpm start",
    "cronSchedule": "*/5 * * * *",
    "restartPolicyType": "NEVER"
  }
}